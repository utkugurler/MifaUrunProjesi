<form id="hammaddeform">
    <div class="form-group row">
        <label for="text" class="col-sm-2 col-form-label">Hammadde Adı</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Hammadde" placeholder="Hammadde Adı">
        </div>
    </div>
    <div class="form-group row">
        <label for="text" class="col-sm-2 col-form-label">Stok Miktarı</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="Stok" placeholder="Stok Miktarı">
        </div>
    </div>
    <div class="form-group row">
        <label for="text" class="col-sm-2 col-form-label">Hammadde Kodu</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="HammaddeKod" placeholder="Hammadde Kod">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" class="btn btn-primary" value="Kaydet" id="btnsubmit"/>
        </div>
    </div>
</form>

<script type="text/javascript">
    $(document).ready(function () {
        $("#btnsubmit").click(function (e) {
            //Serialize the form datas.   
            //to get alert popup   
            
            var hammaddeler = {
                Hammadde: $("#Hammadde").val(),
                Stok: $("#Stok").val(),
                HammaddeKod: $("#HammaddeKod").val(),
            }


            $.ajax({
                type: "POST",
                url: "/Hammaddeler/YeniHammadde",
                data: hammaddeler,
                dataType: "json",
